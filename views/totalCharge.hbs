<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Total Charge</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/TotalCharge.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
    <link rel = "icon" href ="/images/logo1circle.png" type = "image/x-icon"> 
    <script>
        function calculate(){
            var fees = 0;
            var room = $("#roomfees");
            var extra = $("#extrafees");
            var service = $("#servicefees");
            var total = $("#total");
            var breakfast = $("#breakfastbuffet");
            var lunch = $("#lunchbuffet");
            var dinner = $("#dinnerbuffet");
            var allbuffet = $("#allbuffet");
            var pickup = $("#pickupprice");
            var numrooms = $("#numrooms");
            var requestString;

            var inputtotal = $("#inputtotal");

            if ($("input[name='extrafee']:checked").val() === undefined){
                extra.text(parseFloat(0).toFixed(2));
                var amount = parseFloat(room.text().trim()) + parseFloat(service.text().trim()) + parseFloat(extra.text());
                total.text(amount);
                inputtotal.attr("value",amount);
            }

            if ($("input[name='extrafee']:checked") != "undefined"){
                $.each($("input[name='extrafee']:checked"), function(){
                    var string;
                    if ($(this).val() === 'breakfastbuffet'){
                        fees = parseFloat(fees) + parseFloat(breakfast.text());
                        string = 'Daily Breakfast Buffet'
                    } else if ($(this).val() === 'lunchbuffet'){
                        fees = parseFloat(fees) + parseFloat(lunch.text());
                        string = 'Daily Lunch Buffet '
                    } else if ($(this).val() === 'dinnerbuffet') {
                        fees = parseFloat(fees) + parseFloat(dinner.text());
                        string = 'Daily Dinner Buffet'
                    } else if ($(this).val() === 'allbuffet'){
                        fees = parseFloat(fees) + parseFloat(allbuffet.text());
                        string = 'Daily Buffet'
                    } else if ($(this).val() === 'pickupprice'){
                        fees = parseFloat(fees) + parseFloat(pickup.text());
                        string = 'Arrival and Departure Airport Pick-Up'
                    }

                    if (requestString === ""){
                        requestString = string;
                    }
                    else {
                        requestString = requestString + string + ", "
                    }

                    extra.text(fees.toFixed(2));
                    var amount = parseFloat(room.text().trim()) + parseFloat(service.text().trim()) + parseFloat(fees);
                    total.text(amount);
                    inputtotal.attr("value",amount);

                });

                requestString.substring(0, requestString.length() - 2);
                console.log(requestString);

            }
        }

        function setRoomFee(){
            var room = $("#roomfees");
            var numrooms = $("#numrooms");

            room.text(parseFloat(room.text().trim()) * parseFloat(numrooms.val().trim()));

        }

        function displayDate(){
            var cidate = new Date($('#checkIn').text());
            var codate = new Date($('#checkOut').text());
            var months = [ "January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"];
            var days = [ "Sun", "Mon", "Tues", "Wed", "Thurs", "Fri",
                "Sat"];

            var cimonth = months[cidate.getMonth()];
            var ciyear = cidate.getFullYear();
            var ciday = cidate.getDate();
            var cidayweek = days[cidate.getUTCDay()];

            var comonth = months[codate.getMonth()];
            var coyear = codate.getFullYear();
            var coday = codate.getDate();
            var codayweek = days[codate.getUTCDay()];

            if (ciday < 10){
                ciday = "0" + ciday;
            }
            if (coday < 10){
                coday = "0" + coday;
            }

            var checkinstring = ciday + " " + cimonth + " " + ciyear; 
            var checkoutstring = coday + " " + comonth + " " + coyear; 

            $("#checkIn").text(checkinstring);
            $("#checkOut").text(checkoutstring);

            $("#cidayweek").text(cidayweek);
            $("#codayweek").text(codayweek);
        }

        $(document).ready(function(){
            setRoomFee();
            calculate();
            displayDate();
        });
    </script>
</head>
<body>
    {{> (lookup . 'whichheader') }}
<div class="container summary mt-4">
    <div class="row py-2">
        <div class="col-md-12 col-12" style="text-align: center">
            <b>Stay Summary</b>
        </div>
    </div>
    <div class="row pb-3">
        <div class="col-md-2 col-12">
            <img class="img-fluid" src ="{{source}}">
        </div>
        <div class="col-md-6 col-12 align-self-center pt-3 pt-md-0">
            <p><span style="font-weight:1000"><span id="cidayweek">Mon</span>, <span id="checkIn">{{data.checkInDate}}</span> / <span id="codayweek">Sun</span>, <span id="checkOut">{{data.checkOutDate}}</span></span><br><br>
                <span style="font-weight:1000">Rooms & Guests:</span> {{data.rooms}} Room/s, {{data.adults}} Adult/s, {{data.kids}} Kid/s<br><br><span style="font-weight:1000">Room Type:</span> {{data.roomtype}}</p>
        </div>
        <div class="col-md-3 col-12">
        </div>
    </div>
</div>
<div class="container mt-4" id="guest_form">
    <div class ="row">
        <div class="col-md-7 col-12">
            <span class="error-label mr-auto" id="owner-error">
                {{databaseError}}
            </span>
            <div class="row pt-3">
                <div class="style">Guest Information</div>
            </div>
            <div class="row pt-2">
                <div class="subheader">Fields marked with * are required.</div>
            </div>
            <div class="row">
                <img src="/images/AboutUs/MP.svg" width="97%" height="1%">
            </div>
            <div class="container" id="guest">
                <form method="POST" action="/totalCharge/pay">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="fname">First Name*</label>
                            <input type="text" class="form-control" id="fname" name="fname" value="{{data.fname}}">
                            <span class="error-label mr-auto">
                                {{fnameError}}
                            </span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="lname">Last Name*</label>
                            <input type="text" class="form-control" id="lname" name="lname" value="{{data.lname}}">
                            <span class="error-label mr-auto">
                                {{lnameError}}
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address*</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{data.email}}">
                        <span class="error-label mr-auto">
                            {{emailError}}
                        </span>
                    </div>
                    <div class="form-group">
                        <label for="comment">Additional Comments/Special Requests</label>
                        <textarea class="form-control" id="comment" rows="3" name="requests" value="{{data.requests}}"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="checkInDate" value="{{data.checkOutDate}}">
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="checkOutDate" value="{{data.checkInDate}}">
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="rooms" value="{{data.rooms}}" id="numrooms">
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="adults" value="{{data.adults}}">
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="kids" value="{{data.kids}}">
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="roomtype" value="{{data.roomtype}}">
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="pricePerRoom" value="{{data.pricePerRoom}}">
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="total" value="{{data.total}}" id="inputtotal">
                    </div> 
                    <div class="form-group">
                         <textarea class="form-control" rows="3"></textarea>
                    </div> 
                    <div class="form-group text-center">
                        <input class="btn" type="submit" value="Payment" id="charge">
                    </div>        
                </form>
            </div>
            <div class="row pt-3">
                <div class="style">Additional Request</div>
            </div>
            <div class="row pt-2">
                <div class="subheader">Please let us know if there are any additional requests you would like to add.</div>
            </div>
            <div class="row">
                <img src="/images/AboutUs/MP.svg" width="97%" height="1%">
            </div>
            <div class="form-check pt-2 pb-4">
                <form>
                <input class="form-check-input" type="checkbox" name="extrafee" onclick=calculate() value="breakfastbuffet">
                <label class="form-check-label" for="gridCheck1">
                    Daily Breakfast Buffet (PHP <span id="breakfastbuffet">1500.00</span>)
                </label>
                <br>
                <div class="row pt-2"></div>
                <input class="form-check-input" type="checkbox" name="extrafee" onclick=calculate() value="lunchbuffet">
                <label class="form-check-label" for="gridCheck1">
                    Daily Lunch Buffet (PHP <span id="lunchbuffet">1500.00</span>)
                </label>
                <br>
                <div class="row pt-2"></div>
                <input class="form-check-input" type="checkbox" name="extrafee" onclick=calculate() value="dinnerbuffet">
                <label class="form-check-label" for="gridCheck1">
                    Daily Dinner Buffet (PHP <span id="dinnerbuffet">2000.00</span>)
                </label>
                <br>
                <div class="row pt-2"></div>
                <input class="form-check-input" type="checkbox" name="extrafee" onclick=calculate() value="allbuffet">
                <label class="form-check-label" for="gridCheck1">
                    Daily Buffet (PHP <span id="allbuffet">4500.00</span>)
                </label>
                <br>
                <div class="row pt-2"></div>
                <input class="form-check-input" type="checkbox" name="extrafee" onclick=calculate() value="pickupprice">
                <label class="form-check-label" for="gridCheck1">
                    Arrival and Departure Airport Pick-Up (PHP <span id="pickupprice">1730.00</span>)
                </label>
                </form>
            </div>
        </div>
        <div class="col-md-5 mb-4 col-12">
            <div class="row mt-4" id="container">
                <div class="container py-3" id="container">
                    <div class="row mx-1 my-1 bgcolor">
                        <div class="container mt-2" id="charge">
                            <h1 class="py-2 mt-1 mb-4">Fees</h1>
                            <div class="row pb-3">
                                <div class="col-md-6 col-12 first">
                                    Room Fees x {{data.rooms}} Room/s:
                                </div>
                                <div class="col-md-6 col-12 second">
                                    PHP <span id="roomfees">{{data.pricePerRoom}}</span>
                                </div>
                            </div>
                            <div class="row pb-3">
                                <div class="col-md-6  col-12 first">
                                    Additional Fees:
                                </div>
                                <div class="col-md-6  col-12 second">
                                    PHP <span id="extrafees">0.00</span>
                                </div>
                            </div>
                            <div class="row pb-3">
                                <div class="col-md-6  col-12 first">
                                    Service Fee and Tax:
                                </div>
                                <div class="col-md-6  col-12 second">
                                    PHP <span id="servicefees">1400.00</span>
                                </div>
                            </div>
                            <div class ="row pt-4 pb-2">
                                <div class="col-md-6 col-12 first">
                                    <span style="font-size: 18px;"><b>Total Amount:</b></span>
                                </div>
                                <div class="col-md-6 col-12 second">
                                    <span style="font-size: 18px;"><b>PHP <span id="total">9400.00</span></b></span>
                                </div>
                            </div>
                            {{!-- <div class ="row pt-2">
                                <div class="col-12 text-align-center pb-2">
                                </div>
                            </div> --}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
